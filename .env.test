# Test Environment Configuration
NODE_ENV=test
PORT=3000

# Database
DATABASE_URL=postgresql://testuser:testpass@localhost:5432/harmony_test
TEST_DATABASE_URL=postgresql://testuser:testpass@localhost:5432/harmony_test

# Redis
REDIS_URL=redis://localhost:6379

# Blockchain
BLOCKCHAIN_RPC_URL=http://localhost:8545
BLOCKCHAIN_WS_URL=ws://localhost:8546

# JWT
JWT_SECRET=test-secret-key-for-testing-only
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# API Keys (Test values)
COINMARKETCAP_API_KEY=test-key
ETHERSCAN_API_KEY=test-key
POLYGONSCAN_API_KEY=test-key
ARBISCAN_API_KEY=test-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Testing
TEST_TIMEOUT=30000
TEST_CONCURRENCY=10
TEST_TPS_TARGET=1000

# Logging
LOG_LEVEL=error
LOG_FORMAT=json

# Performance
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLING_RATE=1.0

# ML/AI
ML_MODEL_PATH=./models/test
AI_INFERENCE_TIMEOUT=5000

# Quantum Computing
QUANTUM_SIMULATOR_URL=http://localhost:8080
QUANTUM_ENABLE_SIMULATION=true

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads/test

# Email (Test - no real emails sent)
SMTP_HOST=smtp.test.com
SMTP_PORT=587
SMTP_USER=test@test.com
SMTP_PASS=testpass
EMAIL_FROM=test@harmony-sparc.com

# Webhooks
WEBHOOK_SECRET=test-webhook-secret

# Feature Flags
ENABLE_STAKING=true
ENABLE_GOVERNANCE=true
ENABLE_ML_PREDICTIONS=true
ENABLE_QUANTUM_OPTIMIZATION=true
ENABLE_ADVANCED_TRADING=true

# Admin
ADMIN_TOKEN=admin-test-token-for-testing-only