# EESystem Content Curation Platform - Environment Configuration

# Application
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Database
SQLITE_DATABASE_URL=sqlite:///./eesystem.db

# AstraDB Configuration
ASTRA_DB_ID=your-astra-db-id
ASTRA_DB_REGION=your-astra-db-region
ASTRA_DB_TOKEN=your-astra-db-token
ASTRA_DB_KEYSPACE=eesystem

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:3001

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=pdf,docx,txt,md,html,json,csv,xml,xlsx,pptx

# AI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
REQUESTY_API_KEY=your-requesty-api-key
REQUESTY_BASE_URL=https://api.requesty.ai

# Default LLM Settings
DEFAULT_MODEL=gpt-3.5-turbo
MAX_TOKENS=2048
TEMPERATURE=0.7

# Vector Search
VECTOR_DIMENSION=1536
SIMILARITY_THRESHOLD=0.8

# Publishing
PUBLISH_WEBHOOK_URL=
PUBLISH_WEBHOOK_SECRET=

# Monitoring
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO