# EESystem Content Curation Platform - Environment Variables Template
# Copy this file to .env.local for local development
# For Railway deployment, set these in Railway dashboard

# === APPLICATION SETTINGS ===
NODE_ENV=production
PORT=8000
HOST=0.0.0.0
DEBUG=false
LOG_LEVEL=info

# === CORS SETTINGS ===
ALLOWED_ORIGINS=https://eesystem-curation.railway.app,https://api.eesystem-curation.railway.app

# === DATABASE SETTINGS ===
# PostgreSQL (Railway managed)
DATABASE_URL=postgresql://user:password@host:port/database
# Alternative: SQLite for development
# DATABASE_URL=sqlite:///./eesystem_curation.db

# === REDIS SETTINGS ===
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# === AUTHENTICATION ===
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# === ASTRA DB SETTINGS ===
ASTRA_DB_APPLICATION_TOKEN=your_astra_db_token
ASTRA_DB_ID=your_astra_db_id
ASTRA_DB_REGION=us-east-1
ASTRA_DB_KEYSPACE=eesystem_curation
ASTRA_DB_SECURE_CONNECT_BUNDLE_PATH=/app/secure-connect-bundle.zip

# === AI/ML SETTINGS ===
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
EMBEDDING_MODEL=text-embedding-3-small

# === MONITORING & LOGGING ===
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=production
ENABLE_METRICS=true
METRICS_PORT=9090

# === FILE UPLOAD SETTINGS ===
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,application/pdf

# === CELERY SETTINGS ===
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC

# === CACHE SETTINGS ===
CACHE_TTL=300  # 5 minutes
CACHE_MAX_SIZE=1000

# === RATE LIMITING ===
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# === WEBSOCKET SETTINGS ===
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# === FRONTEND SETTINGS ===
VITE_API_URL=https://api.eesystem-curation.railway.app
VITE_WS_URL=wss://api.eesystem-curation.railway.app
VITE_ENVIRONMENT=production
VITE_ENABLE_ANALYTICS=true
VITE_SENTRY_DSN=your_frontend_sentry_dsn

# === BACKUP SETTINGS ===
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# === SECURITY SETTINGS ===
SECURE_COOKIES=true
CSRF_PROTECTION=true
HELMET_ENABLED=true