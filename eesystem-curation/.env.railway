# Railway Environment Variables
# These are set in Railway dashboard under Variables tab
# This file is for reference only

# === RAILWAY MANAGED SERVICES ===
# DATABASE_URL - Automatically set by Railway PostgreSQL plugin
# REDIS_URL - Automatically set by Railway Redis plugin
# PORT - Automatically set by Railway

# === REQUIRED SECRETS (Set in Railway Dashboard) ===
JWT_SECRET=${{ JWT_SECRET }}
ASTRA_DB_APPLICATION_TOKEN=${{ ASTRA_DB_APPLICATION_TOKEN }}
ASTRA_DB_ID=${{ ASTRA_DB_ID }}
OPENAI_API_KEY=${{ OPENAI_API_KEY }}
SENTRY_DSN=${{ SENTRY_DSN }}
REDIS_PASSWORD=${{ REDIS_PASSWORD }}

# === APPLICATION CONFIGURATION ===
NODE_ENV=production
LOG_LEVEL=info
DEBUG=false
ENVIRONMENT=production

# === CORS AND DOMAINS ===
ALLOWED_ORIGINS=https://eesystem-curation.railway.app,https://api.eesystem-curation.railway.app

# === ASTRA DB CONFIGURATION ===
ASTRA_DB_REGION=us-east-1
ASTRA_DB_KEYSPACE=eesystem_curation

# === AI/ML CONFIGURATION ===
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
EMBEDDING_MODEL=text-embedding-3-small

# === MONITORING ===
SENTRY_ENVIRONMENT=production
ENABLE_METRICS=true

# === FILE UPLOAD LIMITS ===
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,application/pdf

# === CACHE CONFIGURATION ===
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# === RATE LIMITING ===
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# === WEBSOCKET CONFIGURATION ===
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# === FRONTEND CONFIGURATION ===
VITE_API_URL=https://api.eesystem-curation.railway.app
VITE_WS_URL=wss://api.eesystem-curation.railway.app
VITE_ENVIRONMENT=production
VITE_ENABLE_ANALYTICS=true
VITE_SENTRY_DSN=${{ VITE_SENTRY_DSN }}

# === BACKUP CONFIGURATION ===
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# === SECURITY CONFIGURATION ===
SECURE_COOKIES=true
CSRF_PROTECTION=true
HELMET_ENABLED=true